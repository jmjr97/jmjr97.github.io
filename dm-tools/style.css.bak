:root {
	--page-bg: #1e1e2e;
	--container: #24273a;
	--box-bg: #494d64;
	--border: #252422;
	--border-light: #ccc5b9;
	--field: #24273a;
	--text: #cad3f5;
	--text-dim: #ccc5b9;
	--text-dark: #1e1e2e;
	--btn: #8aadf4;

	--green: #a6da95;
}

* {
	font-family: 'Inter', sans-sarif;
}

body {
	background: var(--page-bg);
	color: var(--text);
}

.page-container {
	background: var(--container);
	text-align: center;
	width: 1000px;
	margin: 20px auto;
	padding: 10px;
	border-radius: 12px;
}

.tracker_box {
	background: var(--page-bg);
	width: 420px;
	border-radius: 8px;
	margin: 20px auto;
	padding: 5px 0px 10px 0px;
}

.tracker {
	/* background: var(--page-bg); */
	width: 400px;
}

h1 {
	color: #8aadf4;
	text-align: left;
	text-decoration: underline;
	padding-left: 30px;
}

h2 {
	color: #8aadf4;
}

#player_input {
	background: var(--field);
	color: var(--text);
	margin: 5px 0;
	justify-content: space-between;
	align-items: center;
	width: 250px;
	padding: 8px;
	border: 1px solid var(--page-bg);
	border-radius: 8px;
}

#player_input:focus {
	outline: none;
}

button {
	background: var(--btn);
	color: var(--text-dark);
	width: 100px;
	padding: 8px;
	border: none;
	border-radius: 5px;
	cursor: pointer;
}

button:hover {
	color: var(--text);
}

.round_tracker {
	margin: auto;
	width: 300px;
	height: 25px;
	background: var(--field);
	color: var(--text);
	border: 1px solid var(--page-bg);
	border-radius: 5px;
}

.number {
	float: left;
	margin-left: 10px;
	padding-top: 3px;
}

.time {
	text-align: right;
	margin-right: 10px;
	padding-top: 3px;
}

.players {
	margin-top: 10px;
	width: 400px;
	background: var(--container);
	color: var(--text);
	display: grid;
	justify-items: center;

}

ul {
	margin: auto;
	list-style-type: none;
	width: 390px;
	padding: 0;
}

li {
	margin: 10px 5px;
	display: block;
	justify-content: space-between;
	align-items: center;
	padding: 3px;
	border-bottom: 1px solid var(--border)
}

li:last-of-type {
	border: none;
}

.done_turn {
	margin: 10px 0;
	appearance: none;
	width: 25px;
	height: 25px;
	color: var(--green);
	border: 1px solid var(--border);
	border-radius: 5px;
	margin-right: 5px;
	cursor: pointer;
}

.done_turn:hover {
	border: 1px solid var(--border-light);
}

.done_turn:checked {
	background: var(--button);
}

.done_turn:checked ~ .player_name {
	color: var(--text-dim);
	text-decoration: line-through;
}

.done_turn:checked ~ .labels .roll {
	color: var(--text-dim);
	border: 1px solid var(--border-light);
}

.done_turn:checked ~ .labels .hp {
	color: var(--text-dim);
	border: 1px solid var(--border-light);
}

.done_turn:checked ~ .labels .title_init {
	color: var(--text-dim);
}

.done_turn:checked ~ .labels .title_hp {
	color: var(--text-dim);
}

.labels {
	position: relative;
}

.title_init {
	position: absolute;
	text-align: center;
	top: -5px;
	left: 5px;
	font-size: 12px;
	color: var(--text);
	background: var(--box-bg);
}

.title_hp {
	position: absolute;
	text-align: center;
	top: -5px;
	left: 10px;
	font-size: 12px;
	color: var(--text);
	background: var(--box-bg);
}

.roll {
	margin: 5px 0px;
	display: flex;
	width: 20px;
	font-size: 16px;
	justify-content: center;
	text-align: center;
	color: var(--text);
	background: var(--box-bg);
	padding: 8px;
	border: 1px solid var(--border);
	border-radius: 5px;
	outline: none;
}

.roll[value=''] {
	color: var(--button);
	border: 1px dashed var(--button);
}

.hp {
	margin: 5px 0;
	margin-left: 5px;
	display: flex;
	width: 28px;
	font-size: 16px;
	justify-content: center;
	text-align: center;
	background: var(--box-bg);
	color: var(--text);
	padding: 8px;
	border: 1px solid var(--border);
	border-radius: 5px;
	outline: none;
}

.hp[value=''] {
	color: var(--button);
	border: 1px dashed var(--button);
}

.player_name {
	margin: 5px 0px;
	display: flex;
	width: 60%;
	align-items: center;
	color: var(--text);
	padding: 8px;
}

.delete {
	margin: 5px 0px;
	background: var(--btn);
	color: var(--text-dark);
	padding: 5px 10px;
	border: none;
	border-radius: 5px;
	cursor: pointer;
	height: 35px;
}

.delete:hover {
	color: var(--text);
}

.note {
	display: block;
	width: 100%;
	border: none;
	border-top: 1px solid var(--border-light);
	background: var(--box-bg);
	outline: none;
}

.top {
	display: flex;
}

.bottom {
	display: flex;
}
